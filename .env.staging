# Staging Environment Configuration
# Overrides defaults for staging environment

# Database Configuration
DATABASE_URL=sqlite:///backend/orchestrator_staging.db

# Server Configuration
API_PORT=8001
FRONTEND_PORT=5175
ENVIRONMENT=staging

# Staging Settings
DEBUG=false
LOG_LEVEL=INFO
RELOAD=true
BACKUP_ENABLED=true

# Performance Settings
REQUEST_TIMEOUT=45
DATABASE_ECHO=false

# Feature Flags (production-like)
ENABLE_INTEGRATIONS=true
ENABLE_ANALYTICS=true
ENABLE_CACHING=true

# Security Settings
RATE_LIMIT_ENABLED=true
CORS_ORIGINS=http://localhost:5175

# API Keys - Set these in .env.local
# Use production or staging keys for realistic testing
# See .env.example for template
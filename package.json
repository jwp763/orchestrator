{
  "name": "databricks-orchestrator",
  "private": true,
  "version": "1.0.0",
  "description": "AI-powered project and task management orchestrator",
  "scripts": {
    "start:dev": "./scripts/start-dev.sh",
    "start:staging": "./scripts/start-staging.sh",
    "start:prod": "./scripts/start-prod.sh",
    "db:backup": "./scripts/backup-prod.sh",
    "db:copy-prod-to-staging": "./scripts/copy-prod-to-staging.sh",
    "db:reset-dev": "./scripts/reset-dev.sh",
    "test:backend": "cd backend && pytest",
    "test:frontend": "cd frontend && npm test",
    "test:all": "npm-run-all --sequential test:backend test:frontend",
    "install:all": "cd backend && pip install -r requirements.txt && cd ../frontend && npm install",
    "lint:backend": "cd backend && black . && mypy .",
    "lint:frontend": "cd frontend && npm run lint:fix && npm run format",
    "lint:all": "npm-run-all --parallel lint:backend lint:frontend",
    "env:load": "python scripts/load-env.py",
    "env:load:dev": "python scripts/load-env.py development",
    "env:load:staging": "python scripts/load-env.py staging",
    "env:load:prod": "python scripts/load-env.py production",
    "backend:start:dev": "cross-env ENVIRONMENT=development uvicorn backend.src.main:app --reload --host 0.0.0.0 --port 8000",
    "backend:start:staging": "cross-env ENVIRONMENT=staging uvicorn backend.src.main:app --host 0.0.0.0 --port 8001",
    "backend:start:prod": "cross-env ENVIRONMENT=production uvicorn backend.src.main:app --host 0.0.0.0 --port 8002",
    "backend:dev": "npm-run-all --sequential env:load:dev backend:start:dev",
    "backend:staging": "npm-run-all --sequential env:load:staging backend:start:staging",
    "backend:prod": "npm-run-all --sequential env:load:prod backend:start:prod",
    "frontend:dev": "cd frontend && cross-env VITE_API_BASE_URL=http://localhost:8000 npm run dev -- --port 5174 --host",
    "frontend:staging": "cd frontend && cross-env VITE_API_BASE_URL=http://localhost:8001 npm run dev -- --port 5175 --host",
    "frontend:prod": "cd frontend && cross-env VITE_API_BASE_URL=http://localhost:8002 npm run dev -- --port 5176 --host",
    "dev:full": "npm-run-all --parallel backend:dev frontend:dev",
    "staging:full": "npm-run-all --parallel backend:staging frontend:staging",
    "prod:full": "npm-run-all --parallel backend:prod frontend:prod",
    "services:health": "wait-on http://localhost:8000/health && wait-on http://localhost:5174",
    "services:health:staging": "wait-on http://localhost:8001/health && wait-on http://localhost:5175",
    "services:health:prod": "wait-on http://localhost:8002/health && wait-on http://localhost:5176"
  },
  "keywords": [
    "ai",
    "project-management",
    "task-management",
    "orchestrator",
    "fastapi",
    "react"
  ],
  "author": "John Pope",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "wait-on": "^8.0.3"
  }
}

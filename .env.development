# Development Environment Configuration
# Overrides defaults for development environment

# Database Configuration
DATABASE_URL=sqlite:///backend/orchestrator_dev.db

# Server Configuration  
API_PORT=8000
FRONTEND_PORT=5174
ENVIRONMENT=development

# Development Settings
DEBUG=true
LOG_LEVEL=DEBUG
RELOAD=true
BACKUP_ENABLED=false

# Performance Settings (relaxed for dev)
REQUEST_TIMEOUT=60
DATABASE_ECHO=true

# Feature Flags (enabled for testing)
ENABLE_INTEGRATIONS=true
ENABLE_ANALYTICS=false
ENABLE_CACHING=false

# CORS Settings (permissive for dev)
CORS_ORIGINS=http://localhost:5174,http://localhost:3000

# API Keys - Set these in .env.local
# Do not put real API keys in this committed file
# See .env.example for template